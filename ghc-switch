if [ -z "$1" ]; then
  printUsage
  exit 1
fi

if [ "$1" == "--help" ]; then
  printUsage
  exit 0
fi

MACHINE=$(uname -m)
KERNEL=$(uname -s)

GHCVER=$1

case "$GHCVER" in
  "7.6.3") ;;
  "7.8.4") ;;
  "7.10.3") ;;
  "8.0.1") ;;
  "8.0.2") ;;
  "8.2.1") ;;
  "8.2.2") ;;
  "8.4.1") ;;
  "8.4.2") ;;
  "8.4.3") ;;
  *)
    echo "$GHCVER âˆ‰ {7.6.3, 7.8.4, 7.10.3, 8.0.1, 8.0.2, 8.2.1, 8.2.2, 8.4.1, 8.4.2, 8.4.3}"
    exit 1
    ;;
esac

set -e

mkdir -p "$HOME/.ghc-switch"
mkdir -p "$HOME/.local/bin"

if [ ! -d "$HOME/.ghc-switch/ghc-$GHCVER" ]; then
  GHCTARBALL=""
  GHCNOPIE=""

